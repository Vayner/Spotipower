<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MyActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:id="@+id/searchButton"
        android:onClick="Search"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
         />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/searchInput"
        android:layout_alignBottom="@+id/searchButton"
        android:layout_alignParentLeft="true"

        android:layout_toLeftOf="@+id/searchButton"
        android:layout_toStartOf="@+id/searchButton" />



    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/searchButton"
        android:layout_toLeftOf="@+id/searchButton"
        android:layout_toStartOf="@+id/searchButton">


        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Artist"
            android:id="@+id/artistButton"
            android:layout_toRightOf="@+id/albumButton"
            android:layout_toEndOf="@+id/albumButton"
            android:onClick="onRadioButtonClicked"
            android:checked="true" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Album"
            android:id="@+id/albumButton"
            android:layout_above="@+id/awsomeB"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:onClick="onRadioButtonClicked"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Track"
            android:id="@+id/trackButton"
            android:layout_toEndOf="@+id/artistButton"
            android:checked="false"
            android:layout_alignTop="@+id/artistButton"
            android:layout_toRightOf="@+id/artistButton"
            android:onClick="onRadioButtonClicked"

            />


        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Playlist"
            android:id="@+id/playlistButton"
            android:layout_toEndOf="@+id/trackButton"
            android:checked="false"
            android:layout_toRightOf="@+id/trackButton"
            android:onClick="onRadioButtonClicked"/>


    </RadioGroup>
</RelativeLayout>
